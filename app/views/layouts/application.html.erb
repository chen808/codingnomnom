<!DOCTYPE html>
<html>
<head>
  <title>Coding Nom Nom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Merriweather:400,900' rel='stylesheet' type='text/css'>

<style>

  * {
  border-radius: 0 !important;
  -moz-border-radius: 0 !important;
  font-family: 'Roboto Slab', serif;
  }

  h2 {
    font-family: 'Merriweather', serif; 
  }
	#topBar{
		/*height: 300px;*/
		background-color: red;
		padding: 10px 0px;
	}

	#nomnomlogo {
		padding: 20px 0px;
	}

  ul {
    margin-left: -70px;
  }


  ul li {
    display: inline-block;
    padding: 20px 10px 10px 10px;
  }

  nav {
    height: 70px;
    background-color: black;
    margin-bottom: 50px;
  }

  nav a {
    color: white;
  }

  nav a:hover {
    color: gray;
  }

  nav.not_user_log {
    /*border: 1px solid orange;*/
    padding-left: 80px;
  }


</style>

</head>
<body>
<div id="topBar">

	<!-- NomNom Logo -->
	<div id="nomnomlogo" align="center">
	<%= image_tag("nom_logo-02.png", size:"200x170", :alt => "nomnomlogo") %>
	</div>


</div><!-- End of 'topbar' container -->


  <% if current_user %>
    <nav>
      <div class="container-fluid">
        
        <ul align='center' class='nav_top_bar'>
          <li><a href = '/'>Homepage</a></li>
          <li><a href= '/profile'>Profile</a></li>
          <li><a href = '/newrecipe'>Create Recipe</a></li>
          <li><a href = '/editprofile'>Edit Profile</a></li>
          <li><a href="/sessions/<%=current_user.id%>" data-method="delete"></span> Logout</a></li>
        </ul>

      </div>
    </nav>

  <% else %>

   <nav class='not_user_log'>
        <ul>
    
        	<li><a href='/'>Homepage</a></li>
       		<li><a href='/login' id="loginButton">Login</a></li>

        </ul>
      </div>
    </nav>

   <% end %>

<%= yield %>



</body>
</html>
