<div class = "container">
	<div class = "row" >
			<h3>Edit your profile</h3>
			<form role="form" action ="/updateprofile" method ="post">
				<input name ="authenticity_token" value ="<%= form_authenticity_token%>" type="hidden">
				<input name ="_method" value ="patch" type="hidden">
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" class="form-control" id="name" name="user[name]" value = "<%= @user.name%>">
				</div>
				<div class="form-group">
					<label for="alias">Alias:</label>
					<input type="text" class="form-control" id="alias" name="user[alias]" value = "<%= @user.alias%>">
				</div>
				<div class="form-group">
					<label for="email">Email address:</label>
					<input type="email" class="form-control" id="email" name="user[email]" value = "<%= @user.email%>">
				</div>
				<button type="submit" class="btn btn-success">Update</button>
			</form>

			<form action="/users/<%= @user.id %>" method="post" class='delete_button'>
    			<input type="hidden" name="_method" value="delete">
      			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token %>">
      			<button type="submit" class="btn btn-danger" >Delete Account?</button>
    		</form>
    </div>
 </div>

