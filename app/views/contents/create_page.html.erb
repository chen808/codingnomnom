<!-- flash error messages if input fields does not match validation specs -->
<%if flash[:mistakes]%>
	<%flash[:mistakes].each do |mes| %>
		<p style="color: gray;"><%=mes%></p>			
	<%end%>
<%end%>

<!-- New Recipe Page -->

<form action='/create_new_recipe' method='post' role="form" class="col-md-5">
	<input name='authenticity_token' value="<%=form_authenticity_token %>" type="hidden">
	<input name='authenticity_token' value="<%=form_authenticity_token %>" type="hidden">
	<input type = 'hidden' value = '<%= current_user.id %>' name = 'content[user_id]'>
	


	<div class="form-group">
		<h1>Create new recipe</h1>
		<!-- Dropdown menu to show different languages -->
		<label for='languages' name="languages">Language:<br>
	    		<select name="languages">
	    			<option value="python">Python</option>
				  <option value="ruby">Ruby</option>
				  <option value="javascript">Javascript</option>
				  <option value="php">PHP</option>
				  <option value="rails">Rails</option>
				  <option value="github">Github</option>
				  <option value="css">CSS</option>
				  <option value="html5">Html5</option>
				  <option value="jquery">Jquery</option>
				  <option value="mysql">MySql</option>
				  
				  	
				</select>
    	</label><br>

    	<!-- Name of Article -->
		<label for="title">Title:</label>
		<input type="text" class="form-control"  name="title">

		<label for="description">Description:</label><br>
		<input type = "text" rows="4" cols="50" name="description"><br>

		<!-- 20 steps -->
		<label for="step1">Step 1:</label>
		<input type="text" class="form-control"  name="step1">

		<label for="step2">Step 2:</label>
		<input type="text" class="form-control"  name="step2">

		<label for="step3">Step 3:</label>
		<input type="text" class="form-control"  name="step3">

		<label for="step4">Step 4:</label>
		<input type="text" class="form-control"  name="step4">

		<label for="step5">Step 5:</label>
		<input type="text" class="form-control"  name="step5">

		<label for="step6">Step 6:</label>
		<input type="text" class="form-control"  name="step6">

		<label for="step7">Step 7:</label>
		<input type="text" class="form-control"  name="step7">

		<label for="step8">Step 8:</label>
		<input type="text" class="form-control"  name="step8">

		<label for="step9">Step 9:</label>
		<input type="text" class="form-control"  name="step9">

		<label for="step10">Step 10:</label>
		<input type="text" class="form-control"  name="step10">

		<button type="submit" class="btn btn-default">Submit</button>
	</div>
</form>