		<h4><a href="#"><%= image_tag("programming_logos_php.png", size:"50x50", :alt => "nomnomlogo") %> Php</a></h4>
	</div>
</form>

<!-- 5 Recent articles -->

<div id="recentNoms">
	<h2>Recent Nom Noms</h2>
	<% @current_five_articles.each do |x| %>
		<h4><a href="/recipe/<%= x.id %>"><%= x.title %></a></h4>
		<h6>Created by: <%= x.user.alias %></h6>
		<h6><a href="#"><%= x.created_at.strftime("%m/%d/%Y") %></a></h6>
		<h1><%=x.language.lang%></h1>
	<% end %>
</div>





